<%- include('partials/header')%>
    <div class="container">
        <div class="container formcontainer">
            <h1 class="formheader">ADD EMPLOYEE</h1>

            <form action="/addemployee" method="POST" enctype="multipart/form-data">

                <div class="form-group">
                    <label class="label" for="employee id">EMPLOYEE ID :</label>
                    <input type="text" placeholder="employee id" class="form-control" name="employeeid" id="employeeid" required>
                </div>
                <div class="form-group">
                    <label class="label" for="name">NAME :</label>
                    <input type="text" placeholder="name" class="form-control" name="employeename" id="employeename" required>
                </div>
                <div class="form-group">
                    <label class="label" for="emailid">EMAIL ID :</label>
                    <input type="email" placeholder="email" class="form-control" name="email" id="email" required>
                </div>
                <div class="form-group">
                    <label class="label" for="phonenumber">PHONE NUMBER :</label>
                    <input type="tel" placeholder="phone number" class="form-control" name="phonenumber" id="phonenumber" required>
                </div>
                <div class="form-group">
                    <label class="label" for="uploadphoto">UPLOADA PHOTO :</label>
                    <input type="file" name="image" id="image" required>
                </div>
                <div class="button">
                    <input type="submit" class="submitbtn" value="SUBMIT">
                </div>


            </form>


        </div>

    </div>

    <%- include('partials/footer')%>